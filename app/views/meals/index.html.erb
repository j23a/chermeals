<p id="notice"><%= notice %></p>

<h1>let's chermeals</h1>

<div class="ui link cards">
  <% @meals.each_with_index do |meal, index| %>

    <div class="card">
      <div class="content">

        <i class="right floated star icon"></i>
        <div class="header"><%= meal.title %></div>
        <div class="meta">
          <a><%= index + 1 %> week from today</a>
        </div>
        <div class="description">
          Meal description here. Yes very yummy in your tummy. So delicious.
        </div>
      </div>
      <div class="extra content">
        <%= link_to meal do %>
          <%= semantic_icon("eye") %>
          Show
        <% end %>

        <%= link_to edit_meal_path(meal) do %>
          <%= semantic_icon("right floated pencil") %>
        <% end %>
        <%= link_to meal, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= semantic_icon("right floated trash") %>
        <% end %>
      </div>
    </div>
  <% end %>

</div>
<div class="ui hidden divider"></div>

<div class="ui buttons">
  <%= link_to 'New Meal', new_meal_path, {class: 'blue ui button'} %>

</div>
