
<div class="ui middle aligned center aligned grid">
  <div class="column cm-singup-column">
    <h2 class="ui grey image header">
     <%= image_tag "gloves.png", class: 'image' %>
      <div class="content">
        Sign up to <span class="cm-typed-logo"> <span>cher</span>meals</span>
      </div>
    </h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "ui large form"}) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.text_field :name, autofocus: true, placeholder:'Name' %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="at icon"></i>
            <%= f.email_field :email, placeholder:'Email' %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder:'Password' %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:'Password confirmation' %>
          </div>
        </div>
        <%= f.submit "Sign up", :class => 'ui fluid large blue submit button'  %>
      </div>

      <div class="ui error message"><%= devise_error_messages! %></div>
    <% end %>
    <div class="ui message">
      Have an account? <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



